{
  "manifest_version": 3,
  "name": "Amazon Variation Price Tracker",
  "version": "1.0",
  "description": "Track prices across all color/size variations on Amazon product pages",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.amazon.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
